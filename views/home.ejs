<html>
<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- <script type="text/javascript" src="/js/home.js"></script> -->
</head>

<body>

    <div id="container">
        <div id="top-section">
            <i class="fas fa-address-book" id="title-icon"></i> &nbsp;
            <h1 id="heading">My Contacts</h1>
        </div>
        
        <div id="list-container">
            <ul id="list" style="list-style: none;">
                <% for (let i of contact_List){%>
                    <li>
                        <i class="fas fa-phone">&nbsp;&nbsp;</i><span id="c-name"><%= i.name %></span>
                        <a href="/delete-contact/?id=<%= i._id %>&name=<%= i.name %>" id="delete-link">
                            &nbsp; &nbsp; <i class="fas fa-window-close"></i>
                        </a><span id="c-phone"><%= i.phone %></span>
                    </li>

                    <%} %>
            </ul>
        </div>
        <div id="form-container">
            <form action="/create_contact" method="post">
                <input class="form-input" type="text" name="name" placeholder="Enter Name" required>
                <input class="form-input" type="number" name="phone" placeholder="Enter Phone Number" required>
                <button class="btn" type="submit">Add Contact </button>

            </form>
            
        </div>
    </div>
    <script type="text/javascript" src="/js/home.js"></script>
</body>
</html>